{
    "operations": {
        "Categories": {
            "extends": "discourse.base",
            "httpMethod": "GET",
            "uri": "/categories.json"
        },
        "CategoryLatestTopics": {
            "extends": "discourse.slug",
            "httpMethod": "GET",
            "uri": "/c/{slug}/l/latest.json"
        },
        "CreateCategory": {
            "extends": "discourse.post",
            "uri": "/categories.json",
            "parameters": {
                "name": {
                    "type": "string",
                    "location": "postField",
                    "required": true
                },
                "color": {
                    "type": "string",
                    "location": "postField",
                    "required": true,
                    "default": "000000"

                },
                "text_color": {
                    "type": "string",
                    "location": "postField",
                    "required": true,
                    "default": "FFFFFF"
                }
            }
        },
        "UpdateCategory": {
            "extends": "CreateCategory",
            "httpMethod": "PUT",
            "uri": "/categories/{id}.json",
            "parameters": {
                "id": {
                    "type": "integer",
                    "location": "uri",
                    "required": true
                }
            }
        },
        "DeleteCategory": {
            "extends": "discourse.slug",
            "httpMethod": "DELETE",
            "uri": "/categories/{slug}.json"
        },
        "Site": {
            "extends": "discourse.base",
            "httpMethod": "GET",
            "uri": "/site.json"
        }
    }
}
